{
	"compilerOptions": {
		"module": "es6",
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"noEmitOnError": true,
		"pretty": true,
		"target": "ES6",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"baseUrl": "source/",
		"paths": {
			"@ltypes/*": ["@types/*"],
			"srv/*": ["ts/*"]
		}
	},
	"include": [
		"source/ts/**/*"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}